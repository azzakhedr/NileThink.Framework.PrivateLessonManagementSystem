@model NileThink.Framework.PrivateLessonManagementSystem.BLL.ViewModels.TeacherRegisterResponseModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Teacher/Views/Shared/_LayoutAdmin2.cshtml";
    int y = 0;
}
<style>
    .datepicker-dropdown.dropdown-menu {
        right: auto !important;
    }
</style>
<div class="row">
    <div id="status_message" class="col-lg-12">@Html.Action(actionName: "TempMessage", controllerName: "Shared", routeValues: new { area = "" })</div>
    <div class="col-lg-12">

        <!--begin::Portlet-->
        <div class="m-portlet">
            <div class="m-portlet__head">
                <div class="m-portlet__head-caption">
                    <div class="m-portlet__head-title">
                        <span class="m-portlet__head-icon m--hide">
                            <i class="la la-gear"></i>
                        </span>
                        <h3 class="m-portlet__head-text">
                            الملف الشخصي
                        </h3>
                    </div>
                </div>
            </div>

            <!--begin::Form-->
            <form class="m-form m-form--fit" action="@Url.Action("Index")" method="post" enctype="multipart/form-data">
                <div class="m-portlet__body">
                    <div class="m-form__section m-form__section--first">
                        <div class="m-form__heading">
                            <h3 class="m-form__heading-title">1. البيانات الأساسية : </h3>
                        </div>

                        <div class="form-group m-form__group row">
                            <div class="col-md-6">
                                <label for="example_input_full_name">الاسم الأول </label>
                                <input type="text" class="form-control m-input" name="first_name" value="@Model.first_name">

                            </div>
                            <div class="col-md-6">
                                <label for="example_input_full_name">اسم العائلة </label>
                                <input type="text" class="form-control m-input" name="last_name" value="@Model.last_name">

                            </div>
                        </div>
                        <div class="form-group m-form__group row">
                            <div class="col-md-6">
                                <label for="example_input_full_name">البريد الالكتروني </label>
                                <input type="text" class="form-control m-input" value="@Model.email" disabled>
                                <input type="hidden" name="email" value="@Model.email">

                            </div>
                            <div class="col-md-6">
                                <label for="example_input_full_name">رقم الجوال </label>
                                <input type="text" class="form-control m-input" name="mobile" value="@Model.mobile">

                            </div>
                        </div>
                        <div class="form-group m-form__group row">
                            <div class="col-md-6">
                                <label>الرقم الوطني</label>
                                <input type="text" class="form-control m-input" name="nid" autocomplete="off" value="@Model.nid">
                            </div>
                            <div class="col-md-6">
                                <label>الجنس</label>
                                <div class="m-input-icon m-input-icon--left">
                                    <select class="form-control m-input" name="gender">
                                        <option value="">-- اختر الجنس --</option>
                                        <option value="ذكر" @(Model.gender == "ذكر" ? "selected" : "")>ذكر</option>
                                        <option value="أنثى" @(Model.gender == "أنثى" ? "selected" : "")>أنثى</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="form-group m-form__group row">

                            <div class="col-md-6">
                                <label>تاريخ الميلاد</label>
                                <input type="text" class="form-control m-input" name="dob" id="m_datepicker_1" autocomplete="off" value="@(string.IsNullOrEmpty(Model.dob+"")?"":string.Format("{0:MM/dd/yyyy}",Model.dob))">
                            </div>

                        </div>
                        <div class="form-group m-form__group row">
                            <div class="col-md-6">
                                <label>التخصص الرئيسي </label>
                                <div class="m-input-icon m-input-icon--left">
                                    <select class="form-control m-input" name="specialization">
                                        <option value="">-- اختر التخصص الرئيسي --</option>
                                        @foreach (var item in ViewBag.specializations)
                                        {
                                            <option value="@item.id" @(item.id == Model.specialization ? "selected" : "" )>@item.value</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label>التخصص الفرعي</label>
                                <div class="m-input-icon m-input-icon--left">
                                    <select class="form-control m-input" name="branch_specialization">
                                        <option value="">-- اختر التخصص الفرعي --</option>
                                        @foreach (var item in ViewBag.branch_specialization)
                                        {
                                            <option value="@item.id" @(item.id == Model.branch_specialization ? "selected" : "" )>@item.value</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="form-group m-form__group row">
                            <div class="col-md-6">
                                <label>الشهادة الجامعية</label>
                                <select class="form-control m-input" name="certificate">
                                    <option value="دبلوم" @(Model.certificate == "دبلوم" ? "selected" : "")>دبلوم</option>
                                    <option value="بكالوريوس" @(Model.certificate == "بكالوريوس" ? "selected" : "")>بكالوريوس</option>
                                    <option value="ماجستير" @(Model.certificate == "ماجستير" ? "selected" : "")>ماجستير</option>
                                    <option value="دكتوراه" @(Model.certificate == "دكتوراه" ? "selected" : "")>دكتوراه</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label>الجامعة</label>
                                <input type="text" class="form-control m-input" name="university" value="@Model.university">
                            </div>
                        </div>
                        <div class="form-group m-form__group row">
                            <div class="col-md-6">
                                <label>طريقة التدريس</label>
                                <div class="m-input-icon m-input-icon--left">
                                    <select class="form-control m-input" name="teaching_mechanism">
                                        <option value="">-- اختر طريقة التدريس --</option>
                                        <option value="online" @(Model.teaching_mechanism == "both" ? "selected" : "")>الكل</option>
                                        <option value="online" @(Model.teaching_mechanism == "online" ? "selected" : "")>أونلاين</option>
                                        <option value="onsite" @(Model.teaching_mechanism == "onsite" ? "selected" : "")>في المكان</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <label for="example_input_full_name">سعر التدريس أونلاين </label>
                                <input type="text" class="form-control m-input" name="online_cost" value="@Model.online_cost">
                                <span class="m-form__help">السعر يكون للساعة الواحدة</span>
                            </div>
                            <div class="col-md-3">
                                <label for="example_input_full_name">سعر التدريس بالمكان </label>
                                <input type="text" class="form-control m-input" name="site_cost" value="@Model.site_cost">
                                <span class="m-form__help">السعر يكون للساعة الواحدة</span>
                            </div>

                        </div>
                        <div class="form-group m-form__group row">
                            <div class="col-lg-4">
                                <label for="exampleInputEmail1">الصورة الشخصية</label>
                                <div></div>
                                <div class="custom-file">
                                    <input type="file" class="custom-file-input" id="customFile" name="photo_file">
                                    <label class="custom-file-label selected" for="customFile"></label>
                                    <span class="m-form__help">يسمح فقط بصورة بصيغة PNG JPG </span>
                                </div>
                            </div>
                            <div class="col-lg-2">
                                <img src="~/resources/users/@Model.photo" style="width:150px;height:150px;" />
                                <input type="hidden" name="photo" value="@Model.photo" />
                            </div>


                            <div class="col-lg-4">
                                <label for="exampleInputEmail1">الصورة الشهادة الجامعية</label>
                                <div></div>
                                <div class="custom-file">
                                    <input type="file" class="custom-file-input" id="customFile" name="certificate_photo">
                                    <label class="custom-file-label selected" for="customFile"></label>
                                    <span class="m-form__help">يسمح فقط بصورة بصيغة PNG JPG </span>
                                </div>
                            </div>
                            <div class="col-lg-2">
                                <img src="~/resources/users/@Model.certificate_photo" style="width:150px;height:150px;" />
                                <input type="hidden" name="certificate_photo" value="@Model.certificate_photo" />
                            </div>

                        </div>
                        <br />
                        <div class="m-form__seperator m-form__seperator--dashed"></div>
                        <div class="m-form__section m-form__section--last">
                            <div class="m-form__heading">
                                <h3 class="m-form__heading-title">2. المراحل التعليمية :</h3>
                            </div>

                            <div class="m-form__group form-group row">
                                @foreach (var item in ViewBag.education_level)
                                {
                                    <div class="col-lg-6">
                                        <label for="course_day" style="display:block">&nbsp; </label>
                                        <label class="m-checkbox">
                                            <input type="checkbox" name="education_level[]" value="@item.id" @(Model.education_level != null && Model.education_level.Contains(item.id + "") ? "checked" : "" )> @item.value
                                            <span></span>
                                        </label>
                                    </div>
                                }

                            </div>

                            <br />
                        </div>
                        <br />
                        <div class="m-form__seperator m-form__seperator--dashed"></div>
                        <div class="m-form__section m-form__section--last">
                            <div class="m-form__heading">
                                <h3 class="m-form__heading-title">3. مواعيد المعلم المتاحة :</h3>
                            </div>

                            <div class="m-form__group form-group row">
                                <div class="col-lg-2">
                                    <label for="course_day" style="display:block">&nbsp; </label>
                                    <label class="m-checkbox">
                                        <input type="checkbox" name="teacher_times[0].dayOfWeek" value="0" @(Model.teacher_times.Where(w => w.dayOfWeek == "0").FirstOrDefault() != null ? "checked" : "")> السبت
                                        <span></span>
                                    </label>
                                </div>
                                <div class="col-md-4">
                                    <label for="example_input_full_name">من الساعة  </label>

                                    <input type="text" class="form-control m-input m_datetimepicker_7" name="teacher_times[0].fromTime" value="@(Model.teacher_times.Where(w=>w.dayOfWeek=="0").FirstOrDefault()!=null?Model.teacher_times.Where(w=>w.dayOfWeek=="0").FirstOrDefault().fromTime:"")">

                                </div>
                                <div class="col-md-4">
                                    <label for="example_input_full_name">حتى الساعة </label>
                                    <input type="text" class="form-control m-input m_datetimepicker_7" name="teacher_times[0].toTime" value="@(Model.teacher_times.Where(w=>w.dayOfWeek=="0").FirstOrDefault()!=null?Model.teacher_times.Where(w=>w.dayOfWeek=="0").FirstOrDefault().toTime:"")">
                                </div>
                            </div>

                            <div class="m-form__group form-group row">
                                <div class="col-lg-2">
                                    <label for="course_day" style="display:block">&nbsp; </label>
                                    <label class="m-checkbox">
                                        <input type="checkbox" name="teacher_times[1].dayOfWeek" value="1" @(Model.teacher_times.Where(w => w.dayOfWeek=="1").FirstOrDefault() != null ? "checked" : "")> الأحد
                                        <span></span>
                                    </label>
                                </div>
                                <div class="col-md-4">
                                    <label for="example_input_full_name">من الساعة  </label>
                                    <input type="text" class="form-control m-input m_datetimepicker_7" name="teacher_times[1].fromTime" value="@(Model.teacher_times.Where(w=>w.dayOfWeek=="1").FirstOrDefault()!=null?Model.teacher_times.Where(w=>w.dayOfWeek=="1").FirstOrDefault().fromTime:"")">
                                </div>
                                <div class="col-md-4">
                                    <label for="example_input_full_name">حتى الساعة </label>
                                    <input type="text" class="form-control m-input m_datetimepicker_7" name="teacher_times[1].toTime" value="@(Model.teacher_times.Where(w=>w.dayOfWeek=="1").FirstOrDefault()!=null?Model.teacher_times.Where(w=>w.dayOfWeek=="1").FirstOrDefault().toTime:"")">
                                </div>
                            </div>


                            <div class="m-form__group form-group row">
                                <div class="col-lg-2">
                                    <label for="course_day" style="display:block">&nbsp; </label>
                                    <label class="m-checkbox">
                                        <input type="checkbox" name="teacher_times[2].dayOfWeek" value="2" @(Model.teacher_times.Where(w => w.dayOfWeek=="2").FirstOrDefault() != null ? "checked" : "")> الاثنين
                                        <span></span>
                                    </label>
                                </div>
                                <div class="col-md-4">
                                    <label for="example_input_full_name">من الساعة  </label>
                                    <input type="text" class="form-control m-input m_datetimepicker_7" name="teacher_times[2].fromTime" value="@(Model.teacher_times.Where(w=>w.dayOfWeek=="2").FirstOrDefault()!=null?Model.teacher_times.Where(w=>w.dayOfWeek=="2").FirstOrDefault().fromTime:"")">
                                </div>
                                <div class="col-md-4">
                                    <label for="example_input_full_name">حتى الساعة </label>
                                    <input type="text" class="form-control m-input m_datetimepicker_7" name="teacher_times[2].toTime" value="@(Model.teacher_times.Where(w=>w.dayOfWeek=="2").FirstOrDefault()!=null?Model.teacher_times.Where(w=>w.dayOfWeek=="2").FirstOrDefault().toTime:"")">
                                </div>
                            </div>


                            <div class="m-form__group form-group row">
                                <div class="col-lg-2">
                                    <label for="course_day" style="display:block">&nbsp; </label>
                                    <label class="m-checkbox">
                                        <input type="checkbox" name="teacher_times[3].dayOfWeek" value="3" @(Model.teacher_times.Where(w => w.dayOfWeek=="3").FirstOrDefault() != null ? "checked" : "")> الثلاثاء
                                        <span></span>
                                    </label>
                                </div>
                                <div class="col-md-4">
                                    <label for="example_input_full_name">من الساعة  </label>
                                    <input type="text" class="form-control m-input m_datetimepicker_7" name="teacher_times[3].fromTime" value="@(Model.teacher_times.Where(w=>w.dayOfWeek=="3").FirstOrDefault()!=null?Model.teacher_times.Where(w=>w.dayOfWeek=="3").FirstOrDefault().fromTime:"")">
                                </div>
                                <div class="col-md-4">
                                    <label for="example_input_full_name">حتى الساعة </label>
                                    <input type="text" class="form-control m-input m_datetimepicker_7" name="teacher_times[3].toTime" value="@(Model.teacher_times.Where(w=>w.dayOfWeek=="3").FirstOrDefault()!=null?Model.teacher_times.Where(w=>w.dayOfWeek=="3").FirstOrDefault().toTime:"")">
                                </div>
                            </div>


                            <div class="m-form__group form-group row">
                                <div class="col-lg-2">
                                    <label for="course_day" style="display:block">&nbsp; </label>
                                    <label class="m-checkbox">
                                        <input type="checkbox" name="teacher_times[4].dayOfWeek" value="4" @(Model.teacher_times.Where(w => w.dayOfWeek=="4").FirstOrDefault() != null ? "checked" : "")> الاربعاء
                                        <span></span>
                                    </label>
                                </div>
                                <div class="col-md-4">
                                    <label for="example_input_full_name">من الساعة  </label>
                                    <input type="text" class="form-control m-input m_datetimepicker_7" name="teacher_times[4].fromTime" value="@(Model.teacher_times.Where(w=>w.dayOfWeek=="4").FirstOrDefault()!=null?Model.teacher_times.Where(w=>w.dayOfWeek=="4").FirstOrDefault().fromTime:"")">
                                </div>
                                <div class="col-md-4">
                                    <label for="example_input_full_name">حتى الساعة </label>
                                    <input type="text" class="form-control m-input m_datetimepicker_7" name="teacher_times[4].toTime" value="@(Model.teacher_times.Where(w=>w.dayOfWeek=="4").FirstOrDefault()!=null?Model.teacher_times.Where(w=>w.dayOfWeek=="4").FirstOrDefault().toTime:"")">
                                </div>
                            </div>

                            <div class="m-form__group form-group row">
                                <div class="col-lg-2">
                                    <label for="course_day" style="display:block">&nbsp; </label>
                                    <label class="m-checkbox">
                                        <input type="checkbox" name="teacher_times[5].dayOfWeek" value="5" @(Model.teacher_times.Where(w => w.dayOfWeek=="5").FirstOrDefault() != null ? "checked" : "")> الخميس
                                        <span></span>
                                    </label>
                                </div>
                                <div class="col-md-4">
                                    <label for="example_input_full_name">من الساعة  </label>
                                    <input type="text" class="form-control m-input m_datetimepicker_7" name="teacher_times[5].fromTime" value="@(Model.teacher_times.Where(w=>w.dayOfWeek=="5").FirstOrDefault()!=null?Model.teacher_times.Where(w=>w.dayOfWeek=="5").FirstOrDefault().fromTime:"")">
                                </div>
                                <div class="col-md-4">
                                    <label for="example_input_full_name">حتى الساعة </label>
                                    <input type="text" class="form-control m-input m_datetimepicker_7" name="teacher_times[5].toTime" value="@(Model.teacher_times.Where(w=>w.dayOfWeek=="5").FirstOrDefault()!=null?Model.teacher_times.Where(w=>w.dayOfWeek=="5").FirstOrDefault().toTime:"")">
                                </div>
                            </div>


                            <div class="m-form__group form-group row">
                                <div class="col-lg-2">
                                    <label class="m-checkbox">
                                        <input type="checkbox" name="teacher_day[6].dayOfWeek" value="6" @(Model.teacher_times.Where(w => w.dayOfWeek=="6").FirstOrDefault() != null ? "checked" : "")> الجمعة
                                        <span></span>
                                    </label>
                                </div>
                                <div class="col-md-4">
                                    <label for="example_input_full_name">من الساعة  </label>
                                    <input type="text" class="form-control m-input m_datetimepicker_7" name="teacher_day[6].fromTime" value="@(Model.teacher_times.Where(w=>w.dayOfWeek=="6").FirstOrDefault()!=null?Model.teacher_times.Where(w=>w.dayOfWeek=="6").FirstOrDefault().fromTime:"")">
                                </div>
                                <div class="col-md-4">
                                    <label for="example_input_full_name">حتى الساعة </label>
                                    <input type="text" class="form-control m-input m_datetimepicker_7" name="teacher_day[6].toTime" value="@(Model.teacher_times.Where(w=>w.dayOfWeek=="6").FirstOrDefault()!=null?Model.teacher_times.Where(w=>w.dayOfWeek=="6").FirstOrDefault().toTime:"")">
                                </div>
                            </div>

                            <br />
                        </div>
                        <br />
                        <div class="m-form__seperator m-form__seperator--dashed"></div>
                        <div class="form-group m-form__group row">
                            <div class="col-md-12">
                                <label>نبذة عن المعلم</label>
                                <textarea class="form-control m-input" name="details" rows="10">@Model.details</textarea>
                                <span class="m-form__help">نبذة عن المعلم</span>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="m-portlet__foot m-portlet__no-border m-portlet__foot--fit">
                    <div class="m-form__actions m-form__actions--solid">
                        <button type="submit" class="btn btn-success">حفظ المتغيرات</button>
                        <button type="reset" class="btn btn-secondary">الغاء الأمر</button>
                    </div>
                </div>
            </form>

            <!--end::Form-->
        </div>

        <!--end::Portlet-->
    </div>
</div>
@section scripts{
    <script src="~/assets/demo/default/custom/crud/forms/widgets/bootstrap-datetimepicker.js" type="text/javascript"></script>
      <script src="~/assets/demo/default/custom/crud/forms/widgets/bootstrap-datepicker.js" type="text/javascript"></script>

    <script>
        $(".m_datetimepicker_7").timepicker({ format: "hh:ii", showMeridian: !0, todayHighlight: !0, autoclose: !0, startView: 1, minView: 0, maxView: 1, forceParse: 0, pickerPosition: "bottom-left" });
    </script>

    
}