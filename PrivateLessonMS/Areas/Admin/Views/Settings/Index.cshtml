            <div class="col-md-12">
                <div class="form-group">
                    <label>عن التطبيق</label>
                    <textarea name="about_en" class="form-control m-input about" rows="10">@(s.Where(w => w.key == "about_en").FirstOrDefault() != null ? s.Where(w => w.key == "about_en").FirstOrDefault().value : "")</textarea>
                </div>
            </div>
        </div>*@


                <div class="form-group m-form__group row">
                    <div class="col-md-12">
                        <hr />
                        <button type="submit" class="btn blue"> <i class="fa fa-save"></i> حفظ المتغيرات</button>
                        <a class="btn default" href="@Url.Action("Index")"><i class="fa fa-reply"></i> الغاء الأمر</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</form>