
@{
    ViewBag.Title = "SendNotificationFcm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin2.cshtml";
}

    <div class="row">
        <div id="status_message" class="col-lg-12">@Html.Action(actionName: "TempMessage", controllerName: "Shared", routeValues: new { area = "" })</div>
        <div class="col-lg-12">

            <!--begin::Portlet-->
            <div class="m-portlet">
                <div class="m-portlet__head">
                    <div class="m-portlet__head-caption">
                        <div class="m-portlet__head-title">
                            <span class="m-portlet__head-icon m--hide">
                                <i class="la la-gear"></i>
                            </span>
                            <h3 class="m-portlet__head-text">
                                إرسال إشعار
                            </h3>
                        </div>
                    </div>
                </div>

                <!--begin::Form-->
                <form class="m-form m-form--fit" action="@Url.Action("SendNotificationFcm")" method="post" enctype="multipart/form-data">
                    <div class="m-portlet__body">
                        <div class="m-form__section m-form__section--first">
                            <div class="m-form__heading">
                                <h3 class="m-form__heading-title">1. بيانات الإشعار : </h3>
                            </div>

                            <div class="form-group m-form__group row">
                                <div class="col-md-6">
                                    <label for="example_input_full_name">الفئة المستهدفة  </label>
                                    <div class="m-input-icon m-input-icon--left">
                                        <select class="form-control m-input" name="Type">
                                            <option value="">-- الكل --</option>
                                            <option value="1">الطلبة</option>
                                            <option value="2">المعلمين</option>
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group m-form__group row">
                                <div class="col-md-6">
                                    <label for="example_input_full_name">العنوان </label>
                                    <input type="text" class="form-control m-input" name="Title" required>

                                </div>
                            </div>

                            <div class="form-group m-form__group row">
                                <div class="col-md-6">
                                    <label for="example_input_full_name">الرسالة </label>
                                    <textarea class="form-control m-input" name="subject" required rows="5"></textarea>

                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="m-portlet__foot m-portlet__no-border m-portlet__foot--fit">
                        <div class="m-form__actions m-form__actions--solid">
                            <button type="submit" class="btn btn-success">حفظ المتغيرات</button>
                            <button type="reset" class="btn btn-secondary">الغاء الأمر</button>
                        </div>
                    </div>
                </form>

                <!--end::Form-->
            </div>

            <!--end::Portlet-->
        </div>
    </div>
